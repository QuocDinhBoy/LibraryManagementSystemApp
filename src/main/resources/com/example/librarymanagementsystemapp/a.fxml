<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="700.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="org.example.demofx.controller.LibraryChartController">
    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Biểu đồ số lượng sách theo thể loại" />
    <BarChart fx:id="bookChart" prefHeight="400" prefWidth="600">
        <xAxis>
            <CategoryAxis fx:id="bookCategoryAxis" label="Thể loại sách" />
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="bookNumberAxis" label="Số lượng sách" />
        </yAxis>
    </BarChart>
    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Biểu đồ số lượng người dùng" />
    <BarChart fx:id="userChart" prefHeight="400" prefWidth="600">
        <xAxis>
            <CategoryAxis fx:id="userCategoryAxis" label="Thống kê" />
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="userNumberAxis" label="Số lượng người dùng" />
        </yAxis>
    </BarChart>
</VBox>
